<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Main"
    android:id="@+id/main"
    android:background="#ffcecece"
    android:elevation="0dp">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get cell info"
        android:id="@+id/get_cell_info"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:enabled="true"
        android:onClick="onGetCellInfoClick"
        android:background="@drawable/bg_button"
        android:elevation="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cell information"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/cell_info"
        android:editable="false"
        android:enabled="true"
        android:gravity="start|top"
        android:textAlignment="gravity"
        android:textColor="#ff373737"
        android:textSize="12dp"
        android:fontFamily="monospace"
        android:background="#ffebebeb"
        android:scrollbars="vertical|horizontal"
        android:scrollHorizontally="true"
        android:elevation="0dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:clickable="false"
        android:focusable="false"
        android:hint="(press &quot;GET CELL INFO&quot; to proceed...)"
        android:inputType="none"
        android:nestedScrollingEnabled="false"
        android:focusableInTouchMode="false"
        android:elegantTextHeight="false"
        android:ellipsize="end"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:singleLine="false"
        android:layout_above="@+id/progressBar" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_above="@+id/get_cell_info"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:max="8"
        android:progress="0" />
</RelativeLayout>
